{
	"identifier": "com.gingerbeardman.scrollbars",
	"name": "Toggle Scroll Bars",
	"organization": "gingerbeardman",
	"description": "Always show scrollbars (and thus the change markers for the whole document)",
	"version": "1.0.4",
	"repository": "https://github.com/gingerbeardman/Toggle-Scrollbars",
	"bugs": "https://github.com/gingerbeardman/Toggle-Scrollbars/issues",
	"homepage": "https://www.gingerbeardman.com",
	"funding": "https://ko-fi.com/gingerbeardman",
	"categories": ["commands"],
	"commands": {
		"editor": [
			{
				"title": "Always Show Scroll Bars (restart required)",
				"command": "com.gingerbeardman.scrollbars.AlwaysOn"
			},
			{
				"title": "Use System Default Scrollbars Visibility (restart required)",
				"command": "com.gingerbeardman.scrollbars.SystemDefault"
			}
		]
	},
	"main": "main.js",
	"entitlements": {
		"process": true
	},
	"config": [
		{
			"key": "com.gingerbeardman.scrollbars.enableAutoRun",
			"title": "Always Show Scroll Bars",
			"description": "Important: you will need to restart Nova to see the change",
			"type": "boolean",
			"default": false
		}
	]
}
