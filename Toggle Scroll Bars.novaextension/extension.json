{
    "identifier": "com.gingerbeardman.scrollbars",
    "name": "Toggle Scroll Bars",
	"organization": "gingerbeardman",
    "description": "Always show scrollbars (and therefore change markers for the whole document)",
	"version": "1.0.0",
	"repository": "https://github.com/gingerbeardman/Toggle-Scrollbars",
	"bugs": "https://github.com/gingerbeardman/Toggle-Scrollbars/issues",
	"homepage": "https://www.gingerbeardman.com",
	"funding": "https://ko-fi.com/gingerbeardman",
    "categories": ["commands"],
	"commands": {
		"editor": [
			{
				"title": "Always Show Scrollbars",
				"command": "com.gingerbeardman.editorconfig.indent.reapplyIndentCurrentFile"
			},
			{
				"title": "Use System Default Scrollbars Visibility",
				"command": "com.gingerbeardman.editorconfig.indent.reapplyIndent"
			}
		]
	},
    "main": "main.js",
    "entitlements": {
        "process": true
    },
    "config": [
        {
            "key": "com.gingerbeardman.scrollbars.enableAutoRun",
            "title": "Always Show Scrollbars (restart required)",
            "type": "boolean",
            "default": false
        }
    ]
}
